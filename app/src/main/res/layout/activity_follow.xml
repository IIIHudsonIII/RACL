<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hudso.racl.FollowActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarFadeDuration="30"
        app:layout_constraintDimensionRatio="1:1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="44dp">

        <ProgressBar
            android:id="@+id/progressPB"
            android:layout_width="123dp"
            android:layout_height="109dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="198dp"
            android:indeterminate="true"
            android:indeterminateOnly="true"
            android:indeterminateTint="#5295d4"
            android:visibility="visible"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="188dp" />

        <ImageView
            android:id="@+id/imgFollow"
            android:layout_width="123dp"
            android:layout_height="109dp"
            android:layout_alignLeft="@+id/progressPB"
            android:layout_alignStart="@+id/progressPB"
            android:layout_alignTop="@+id/progressPB"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="false"
            android:scaleType="center"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/lbFollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progressPB"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Validando dispositivo..."
            android:textAlignment="center"
            android:textSize="28sp"
            tools:layout_editor_absoluteX="48dp"
            tools:layout_editor_absoluteY="368dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
