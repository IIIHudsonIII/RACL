<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hudso.racl.FilterActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="277dp"
        android:layout_height="33dp"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp"
        android:text="@string/lb_option_default"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:layout_editor_absoluteX="53dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lb_horario"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="335dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lb_endereco"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="197dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lb_cidade"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="60dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="277dp"
        android:layout_height="33dp"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp"
        android:text="@string/lb_option_default"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_editor_absoluteX="53dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="277dp"
        android:layout_height="33dp"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp"
        android:text="@string/lb_option_default"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="53dp" />

    <RelativeLayout
        android:id="@+id/btnView"
        android:layout_width="395dp"
        android:layout_height="50dp"
        android:layout_weight="0.30"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="491dp">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="97dp"
            android:layout_marginStart="97dp"
            android:layout_weight="0.18"
            app:srcCompat="@android:drawable/ic_menu_info_details"
            tools:layout_editor_absoluteX="90dp"
            tools:layout_editor_absoluteY="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:autoText="false"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/lb_btn_view"
            android:textAlignment="center"
            android:textSize="28sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="7dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView7"
            android:layout_toEndOf="@+id/imageView7" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
