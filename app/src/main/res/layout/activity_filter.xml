<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="always"
    android:paddingLeft="30dp"
    android:paddingRight="25dp"
    android:paddingTop="60dp"
    tools:context="com.example.hudso.racl.FilterActivity" android:paddingStart="30dp" android:paddingEnd="25dp">

    <LinearLayout
        android:layout_width="352dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="28dp">

        <TextView
            android:id="@+id/lbCidade_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/caption_cidade"
            android:textSize="40sp"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="60dp" />

        <AutoCompleteTextView
            android:id="@+id/filter_ac_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:paddingTop="25dp">

            <requestFocus />
        </AutoCompleteTextView>

        <TextView
            android:id="@+id/lbAddress_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="-2dp"
            android:paddingRight="20dp"
            android:paddingTop="40dp"
            android:text="@string/caption_endereco"
            android:textSize="40sp"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="60dp" android:paddingEnd="20dp" android:paddingStart="-2dp" />

        <AutoCompleteTextView
            android:id="@+id/filter_ac_adress"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:paddingTop="25dp">

        </AutoCompleteTextView>

        <RelativeLayout
            android:id="@+id/filter_btn_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            android:layout_weight="0.30"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="422dp">

            <ImageView
                android:id="@+id/btnView_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="81dp"
                android:layout_marginStart="81dp"
                android:contentDescription="@string/btn_view_description"
                app:srcCompat="@android:drawable/ic_menu_info_details"
                tools:layout_editor_absoluteX="90dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/btnView_text"
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/btnView_icon"
                android:layout_toRightOf="@+id/btnView_icon"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/btn_view_description"
                android:textAlignment="center"
                android:textSize="28sp"
                android:textStyle="bold"
                android:visibility="visible"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="7dp" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
